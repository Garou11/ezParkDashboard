<!DOCTYPE html>

<head>
    <title>Dashboard</title>
    <!-- <link type="text/css" rel="stylesheet" href="style.css"> -->
    <link rel="icon" type="image/x-icon" href="https://ezpark-static.s3.ap-south-1.amazonaws.com/favicon.ico">
    <style>
        @import url('https://fonts.googleapis.com/css?family=Poppins:400,500,600,700,800,900');

        body {
            font-family: 'Poppins', sans-serif;
            background: linear-gradient(to top left, #ffcc99 34%, #ffffff 100%);
            background-repeat: no-repeat;
            background-attachment: fixed;
            background-size: cover;
        }

        h1 {
            color: black;
            text-align: center;
        }

        .header {
            width: 100%;
            height: 100%;
            background-image: url('https://s3-us-west-2.amazonaws.com/s.cdpn.io/1462889/pat.svg');
        }

        .form-value {
            display: flex;
            align-items: center;
            justify-content: space-between;

        }

        table {
            width: 80%;
            margin: 10px auto;
            background-image: url('https://s3-us-west-2.amazonaws.com/s.cdpn.io/1462889/pat.svg');
            height: 100%;
            background-color: #2a2b38;
        }

        table.list {
            text-align: center;
            width: 100%;
        }

        th {
            color: white;
        }

        label {
            color: white;
        }

        td {
            color: white;
            border: 1px solid rgb(204, 200, 200);
            text-align: left;
            padding: 8px 15px;

        }

        tr:nth-child(even),
        table.list thread>tr {
            background-color: #6F7E8C;
        }

        input[type="text"],
        input[type="number"] {
            width: 30%;
            padding: 12px 20px;
            margin: 8px 0;
            display: inline-block;
            border: 1px solid rgb(165, 161, 161);
            border-radius: 10px;
        }

        input[type="submit"],
        input[type="reset"] {
            border-radius: 4px;
            height: 44px;
            font-size: 13px;
            font-weight: 600;
            text-transform: uppercase;
            padding: 0 20px;
            display: inline-flex;
            align-items: center;
            text-align: center;
            border: none;
            background-color: #ffcc99;
            color: black;
            box-shadow: 0 8px 24px 0 rgba(255, 235, 167, .2);
            margin: 15px 0 10px;
            cursor: pointer;
        }

        input[type="text"]:disabled {
            background-color: black;
            color: #ffcc99;
            border: none;
        }

        input[type="submit"]:hover {
            background: #4b99d8;
        }

        input[type="reset"]:hover {
            background: #4b99d8;
        }

        button {
            border-radius: 4px;
            height: 44px;
            font-size: 13px;
            font-weight: 600;
            text-transform: uppercase;
            padding: 0 20px;
            display: inline-flex;
            align-items: center;
            text-align: center;
            border: none;
            background-color: #ffcc99;
            color: black;
            box-shadow: 0 8px 24px 0 rgba(255, 235, 167, .2);
            margin: 15px 0 10px;
            cursor: pointer;
        }

        button:hover {
            background: black;
            color: #ffcc99;
        }

        .analytics {
            display: flex;
            justify-content: center;
        }

        .analytics button {
            border-radius: 4px;
            height: 44px;
            font-size: 13px;
            font-weight: 600;
            text-transform: uppercase;
            padding: 0 20px;
            display: inline-flex;
            align-items: center;
            text-align: center;
            border: none;
            background-color: black;
            color: #ffcc99;
            box-shadow: 0 8px 24px 0 rgba(255, 235, 167, .2);
            margin: 15px 0 10px;
            cursor: pointer;
            background-image: url('https://s3-us-west-2.amazonaws.com/s.cdpn.io/1462889/pat.svg');
        }
    </style>
</head>

<body>
    <h1 class="header">Aurbis Parking Dashboard</h1>
    <table>
        <tr>
            <td style="width:25%;">
                <form autocomplete="off" action='/aurbis' method='post'>
                    <div class="form-value">
                        <label for="companyName">Tenant</label>
                        <input type="text" name="companyName" id="companyName">
                    </div>
                    <div class="form-value">
                        <label for="carSlots">Car Slots</label>
                        <input type="number" name="carSlots" id="carSlots">
                    </div>
                    <div class="form-value">
                        <label for="scooterSlots">Scooter Slots</label>
                        <input type="number" name="scooterSlots" id="scooterSlots">
                    </div>
                    <!-- <div>
                        <label for="perPrice">Price</label>
                        <input type="number" name="perPrice" id="perPrice">
                    </div> -->

                    <div class="form_action--button" style="display: flex; justify-content: space-between;">
                        <input type="submit" value="Submit">
                        <input type="reset" value="Reset" onclick="resetForm()">
                    </div>
                </form>

            <td>
                <table class="list" id="storeList">
                    <thead>
                        <tr>
                            <th>Tenant Code</th>
                            <th>Tenant</th>
                            <th>Car Slots</th>
                            <th>Scooter Slots</th>
                            <th>Total Slots</th>
                        </tr>
                    </thead>
                    <tbody>
                        <% companyInfo.forEach(function(company, index) { %>
                            <tr>
                                <td style="width:15%;"><%= company.companyId %></td>
                                <td style="color:#ffcc99; width:25%;"><%= company.companyName %></td>
                                <td><%= company.carSlots %></td>
                                <td><%= company.scooterSlots %></td>
                                <td><%= company.totalSlots %></td>
                                <td>
                                    <button onClick="onEdit(this)">Edit</button>
                                    <a href="/removeCompany?AuthToken=<%= authToken %>&companyCode=<%= company.companyId %>&space=<%= company.spaceId %>"
                                        style="text-decoration: none;">
                                        <button>Delete</button>
                                    </a>
                                </td>
                            </tr>

                            <% }) %>
                    </tbody>
                </table>
            </td>
            </td>
        </tr>
    </table>
    <div class="analytics">
        <button onClick="redirectToDashBoard()"> View Analytics</button>
    </div>
    <script>
        var selectedRow = null

        function onFormSubmit(e) {
            event.preventDefault();
            var formData = readFormData();
            if (selectedRow == null) {
                insertNewRecord(formData);
            }
            else {
                updateRecord(formData);
            }
            resetForm();
        }

        //Retrieve the data
        function readFormData() {
            var formData = {};
            formData["companyName"] = document.getElementById("companyName").value;
            formData["carSlots"] = document.getElementById("carSlots").value;
            formData["scooterSlots"] = document.getElementById("scooterSlots").value;
            // formData["perPrice"] = document.getElementById("perPrice").value;
            return formData;
        }

        function redirectToDashBoard() {
            window.location.href = 'http://ec2-13-232-29-50.ap-south-1.compute.amazonaws.com/public/dashboard/8459166c-c8fe-4cee-8791-5d18e1966ac0';
        }
        //Insert the data
        function insertNewRecord(data) {
            var table = document.getElementById("storeList").getElementsByTagName('tbody')[0];
            var newRow = table.insertRow(table.length);
            cell1 = newRow.insertCell(0);
            cell1.innerHTML = data.companyName;
            cell2 = newRow.insertCell(1);
            cell2.innerHTML = data.carSlots;
            cell3 = newRow.insertCell(2);
            cell3.innerHTML = data.scooterSlots;
            cell4 = newRow.insertCell(3);
            cell4.innerHTML = parseInt(data.carSlots) + parseInt(data.scooterSlots);
            cell4 = newRow.insertCell(4);
            cell4.innerHTML = `<button onClick="onEdit(this)">Edit</button> <button onClick="onDelete(this)">Delete</button>`;
        }

        //Edit the data
        function onEdit(td) {
            selectedRow = td.parentElement.parentElement;
            document.getElementById("companyName").value = selectedRow.cells[1].innerHTML;
            document.getElementById("carSlots").value = selectedRow.cells[2].innerHTML;
            document.getElementById("scooterSlots").value = selectedRow.cells[3].innerHTML;
            document.getElementById("companyName").disabled = true;
            // document.getElementById("perPrice").value = selectedRow.cells[3].innerHTML;
        }
        function updateRecord(formData) {
            selectedRow.cells[0].innerHTML = formData.companyName;
            selectedRow.cells[1].innerHTML = formData.carSlots;
            selectedRow.cells[2].innerHTML = formData.scooterSlots;
            selectedRow.cells[3].innerHTML = parseInt(formData.carSlots) + parseInt(formData.scooterSlots);
        }

        //Delete the data
        function onDelete(td) {
            if (confirm('Do you want to delete this record?')) {
                row = td.parentElement.parentElement;
                document.getElementById('storeList').deleteRow(row.rowIndex);
                resetForm();
            }
        }

        //Reset the data
        function resetForm() {
            document.getElementById("companyName").value = '';
            document.getElementById("carSlots").value = '';
            document.getElementById("scooterSlots").value = '';
            document.getElementById("companyName").disabled = false;
            // document.getElementById("perPrice").value = '';
            selectedRow = null;
        }

    </script>
</body>

</html>